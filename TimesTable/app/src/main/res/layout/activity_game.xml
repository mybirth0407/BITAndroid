<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.timestable.GameActivity">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tv_answer"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:textColor="#000"
      android:textSize="18dp" android:text="정답"/>

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="88"
        android:id="@+id/button1"
        android:layout_marginTop="102dp"
        android:layout_marginRight="5dp"
        android:textSize="32dp"
        android:layout_below="@+id/tv_answer"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="88"
        android:id="@+id/button2"
        android:textSize="32dp"
        android:layout_alignTop="@+id/button1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="88"
        android:id="@+id/button3"
        android:textSize="32dp"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="88"
        android:id="@+id/button4"
        android:textSize="32dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/button1"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="88"
        android:id="@+id/button5"
        android:textSize="32dp"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="88"
        android:id="@+id/button6"
        android:textSize="32dp"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="88"
        android:id="@+id/button7"
        android:textSize="32dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/button9"
        android:layout_toLeftOf="@+id/button8"
        android:layout_toStartOf="@+id/button8" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="88"
        android:id="@+id/button8"
        android:textSize="32dp"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:text="88"
        android:id="@+id/button9"
        android:textSize="32dp"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은시간"
        android:id="@+id/tv_remain_time"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/tv_remain_time_count"
        android:layout_toStartOf="@+id/tv_remain_time_count" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초"
        android:id="@+id/tv_seconds"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="2/5"
      android:id="@+id/tv_answer_count"
      android:textColor="#000"
      android:textSize="18dp"
      android:layout_marginLeft="8dp"
      android:layout_above="@+id/button1"
      android:layout_toRightOf="@+id/tv_answer"
      android:layout_toEndOf="@+id/tv_answer" android:autoText="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/tv_multiple"
        android:textSize="52dp"
        android:textColor="#000"
        android:layout_alignTop="@+id/tv_equals"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/tv_second_num"
        android:textSize="52dp"
        android:textColor="#000"
        android:layout_alignTop="@+id/tv_multiple"
        android:layout_toStartOf="@+id/button6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/tv_equals"
        android:textSize="52dp"
        android:textColor="#000"
        android:layout_above="@+id/button3"
        android:layout_toStartOf="@+id/tv_remain_time_count"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:id="@+id/tv_remain_time_count"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_toLeftOf="@+id/tv_seconds"
        android:layout_toStartOf="@+id/tv_seconds" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/tv_first_num"
        android:textSize="52dp"
        android:textColor="#000"
        android:layout_alignTop="@+id/tv_multiple"
        android:layout_toEndOf="@+id/button_back"/>
    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="뒤로가기"
      android:id="@+id/button_back"
      android:layout_alignBottom="@+id/tv_first_num"
      android:layout_alignParentStart="true"/>

</RelativeLayout>
